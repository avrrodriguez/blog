<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>

    </style>
  </head>

  <body>
    <% @posts.each do |post| %>
    <div>
      <%= post.id %>
      <%= post.title %>
      <%= post.content %>
      <a href="/posts/<%= post.id %>">go to post</a>
      <hr>
    </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
